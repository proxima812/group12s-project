---
import Base from "@/layouts/Base.astro"
import { getCollection } from "astro:content"

const blogEntries = await getCollection("posts")
---

<Base title="12 шагов: группы, материалы и проекты - Посты">
	<main class="grid grid-cols-1 gap-6 md:grid-cols-2 hfeed">
		{
			blogEntries.map(post => (
				<a class="text-xl text-blue-500 hentry" href={`/posts/${post.slug}`}>
					<article
						aria-label={post.data.title}
						class="p-5 rounded-xl bg-white hover:bg-blue-100/50 hover:translate-x-1 transition-all duration-75 ease-linear"
					>
						<time datetime={post.data.publishedDate} class="published sr-only" />
						<span class="author vcard sr-only">SamGold</span>
						<h2 class="entry-title mb-1 leading-tight tracking-tighter">
							{post.data.title}
						</h2>
						<p class="summary text-zinc-600 text-sm">{post.data.description}</p>
					</article>
				</a>
			))
		}
	</main>
</Base>
