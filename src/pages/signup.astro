---
import Base from "@/layouts/Base.astro"
---

<Base title="Создайте новый аккаунт">
	<div class="w-full rounded-lg sm:max-w-md">
		<div class="space-y-4 md:space-y-6">
			<h1
				class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl"
			>
				Создайте новый аккаунт
			</h1>
			<form class="space-y-4 md:space-y-6" method="POST" action="/api/signup">
				<div>
					<label for="username" class="block mb-2 text-sm font-medium text-gray-900"
						>Логин</label
					>
					<input
						type="text"
						name="username"
						id="username"
						placeholder="Bill "
						class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5"
						required=""
					/>
				</div>
				<div>
					<label for="password" class="block mb-2 text-sm font-medium text-gray-900"
						>Пороль</label
					>
					<input
						type="password"
						name="password"
						id="password"
						placeholder="1234"
						class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5"
						required=""
					/>
				</div>

				<button
					type="submit"
					class="w-full text-white bg-blue-500 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
					>Зарегистрироваться</button
				>
			</form>
		</div>
	</div>
</Base>
